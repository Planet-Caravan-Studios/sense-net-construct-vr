---
import LiveClock from '@components/AFrameComponents/LiveClock.astro';
import SessionTimer from '@components/AFrameComponents/SessionTimer.astro';
import TaskTimer from '@components/AFrameComponents/TaskTimer.astro';

const {position} = Astro.props;
const tiltDegree = "25";
---
<a-entity position="0 1.75 -2">
    <a-entity
        position="0 0.25 0.5"
        geometry="primitive: plane; width:auto; height:auto;"
        material="color: #00FF00"
        text="width: 2.5; wrapCount: 50; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; anchor: center; align: center; value: Sense/Net Construct v0.0::initial_tests;"
    ></a-entity>

    <a-entity
        id="center_panel"
        position="0 0 0"
        geometry="primitive: plane; width:4; height:2;"
        material="color: #000000"
        text="width: 3; wrapCount: 80; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: left; value: Main Panel | size: 4x2 | pos: 0 0 0;"
    ></a-entity>

      <!-- Side Panels - START -->
      <a-entity
      id="left_side_panel"
      position="-2.5 0 0.25"
      rotation={`0 ${tiltDegree} 0`}
      geometry="primitive: plane; width:1; height:2;"
      material="color: #666"
      text="width: 0.9;  wrapCount: 20; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Left Side Panel"
      >
          <LiveClock/>
          <SessionTimer/>
          <TaskTimer/>
      </a-entity>

      <a-entity
          id="right_side_panel"
          position="2.5 0 0.25"
          rotation={`0 -${tiltDegree} 0`}
          geometry="primitive: plane; width:1; height:2;"
          material="color: #666"
          text="width: 0.9;  wrapCount: 20; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Right Side Panel"
      ></a-entity>
      <!-- Side Panels - END -->

  <!-- Top/Bottom Panels - START -->
    <a-entity
        id="top_panel"
        position="0 1.35 0.25"
        rotation={`${tiltDegree} 0 0`}
        geometry="primitive: plane; width:4; height:0.5;"
        material="color: #666"
        text="width: 1.5;  wrapCount: 30; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Top Tools Panel"
    ></a-entity>
    <a-entity
        id="bottom_panel"
        position="0 -1.35 0.25"
        rotation={`-${tiltDegree} 0 0`}
        geometry="primitive: plane; width:4; height:0.5;"
        material="color: #666"
        text="width: 1.5;  wrapCount: 30; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Bottom Tools Panel"
    ></a-entity>
  </a-entity>