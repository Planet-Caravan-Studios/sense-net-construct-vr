---
//Styles
	import "@styles/main.scss"

	import QRCode from '@components/QRCode.astro';

//Props
	const { title, description, heading, qrcode, marker, background } = Astro.props;


---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<title>{title} | Augmented Reality Hologram Display</title>
		<meta name="description" content={description ? description : "Marketing Analytics Plugins & Tools"} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Kode+Mono&family=Montserrat:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js" integrity="sha512-CNgIRecGo7nphbeZ04Sc13ka07paqdeTu0WR1IM4kNcpmBAUSHSQX0FslNhTDadL4O5SAGapGt4FodqL8My0mA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

		<!-- ===== ================== ===== -->
		<!-- ===== Javascript Plugins ===== -->
		<!-- ===== ================== ===== -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		<!-- <script is:inline src="https://cdn.jsdelivr.net/npm/easytimer@1.1.3/dist/easytimer.min.js"></script> -->
		<script is:inline src="https://unpkg.com/easytimer/dist/easytimer.min.js"></script>
		<script is:inline src="/scripts/timers.js"></script>
		
	</head>
	<body>
		
		<main class="fullscreen-layout" style={background ? `background-image: url(${background}); background-size: cover; background-position: center;` : ""}>
			
			<section class="left-section">
				
				<div class="text-content">
					<h1>{heading}</h1>
					<slot>
						<div class="metaDetails">
							<p class="clientName">Frank V Radomski & Sons | XYZ Building Project</p>
							<p class="companyName">Interzone Technology Group | Augmented Reality Hologram Display</p>
						</div>
						<div class="bodyText">
							<p class="instructions">
								Instructions: Scan the QR code to open the asset link, then point your phone's camera at the marker image to view the asset.
							</p>
						</div>						
					</slot>
					
					<div class="QRCodeWrapper">
						<QRCode link={qrcode}/>
					</div>

				</div>

				

			</section>
			
			<section class="right-section">
				<div class="image-container">
					<!-- Large image will be placed here -->
					<img src={marker ? marker : "/markers/complex-marker-v1.jpg"}/>						
				</div>
			</section>
			
		</main>
		
		<footer class="footerSection">
			<div>Interzone Technology Group</div>
		</footer>

	</body>
</html>

<style lang="scss">
	
	html, body{
		overflow: hidden;
	}

	main.fullscreen-layout {
		display: flex;
		height: 100vh;
		width: 100vw;
		margin: 0;
		padding: 0;
		overflow: hidden;
	}

	.left-section,
	.right-section {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 2rem;
	}

	.left-section {
		background-color: var(--primary-color);
		color: var(--text-color-light);
	}

	.right-section {
		background-color: var(--secondary-color);
	}

	.QRCodeWrapper{
		margin: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.text-content {
		text-align: left;
		max-width: 100%;
		border: var(--border-settings-main);
		background-color: var(--background-color);
		h1 {
			font-size: 3rem;
			margin-bottom: 0;
			margin-top: 0;
			padding: 1.5rem 0.5rem;
			line-height: 1.2;
			text-align: center;
			border-bottom: var(--border-settings-main);
		}

		.clientName, .companyName {
			font-size: 1.2rem;
			margin-bottom: 0;
			padding: 1rem 0.5rem;
			font-weight: 500;
			border-bottom: var(--border-settings-main);
			/* display: flex;
			flex-direction: row;
			justify-content: flex-start;
			align-items: center; */
		}

		.bodyText {
			font-size: 1rem;
			line-height: 1.6;
			padding: 1rem 0.5rem;
			border-bottom: var(--border-settings-main);
			//background-color: var(--accent-color);
			//color: var(--background-color);
			//padding: 1rem;
			//border-radius: 0.5rem;
		}
	}

	.image-container {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;

		img{
			width: 80%;
			height: auto;
		}
	}

	.footerSection {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		background-color: var(--footer-bg-color);
		color: var(--footer-text-color);
		text-align: center;
		padding: 1rem;
		font-size: 0.9rem;
	}
</style>