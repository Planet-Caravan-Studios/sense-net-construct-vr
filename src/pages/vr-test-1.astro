---
//Essential Components
	import AFrameLayout from '@layouts/AFrameLayout.astro';
	import CameraCursor from '@components/AFrameComponents/CameraCursor.astro';
	import GroundPlane from '@components/AFrameComponents/GroundPlane.astro';
	import CameraCorners from '@components/AFrameComponents/CameraCorners.astro';
//Feature Components
	import Interface from '@components/AFrameComponents/Interface.astro';
	

	import ClickTestObject from '@components/AFrameComponents/ClickTestObject.astro';
---

<AFrameLayout 
	title="VR_Test_1"
	heading=""
>

<!-- <CameraCorners/> -->

<a-scene  
	raycaster="far: 100;"
	loading-screen="dotsColor: red; backgroundColor: black"
>
	<a-assets>
		<a-mixin
			id="marker"
			geometry="primitive: plane; width: 0.02; height: 0.02"
			material="color: red"
		></a-mixin>

		<a-mixin
			id="tile" 
			tile="width: 0.400; height: 0.285"
			animation__scale="property: scale; to: 1.02 1.02 1.02; dur: 100; startEvents: mouseenter"
			animation__scale_reverse="property: scale; to: 1 1 1; dur: 100; startEvents: mouseleave"
		></a-mixin>

		<a-mixin
			id="focus-animation"
			animation__scale="property: object3D.position.z; to: -0.05; dur: 100; startEvents: unfocused"
			animation__scale_reverse="property: object3D.position.z; to: 0; dur: 100; startEvents: focused">
		</a-mixin>

		<img id="groundTexture" src="https://cdn.aframe.io/a-painter/images/floor.jpg">
	</a-assets>

	<Interface/>

	<ClickTestObject/>

	<CameraCursor/>

	<a-entity environment="preset: tron;"></a-entity>
	<!-- <GroundPlane/> -->

</a-scene>

</AFrameLayout>
