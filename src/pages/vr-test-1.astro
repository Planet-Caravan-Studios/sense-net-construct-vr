---
//Essential Components
	import AFrameLayout from '@layouts/AFrameLayout.astro';
	import CameraCursor from '@components/AFrameComponents/CameraCursor.astro';
	import GroundPlane from '@components/AFrameComponents/GroundPlane.astro';
	import CameraCorners from '@components/AFrameComponents/CameraCorners.astro';
//Feature Components
	import LiveClock from '@components/AFrameComponents/LiveClock.astro';
	import SessionTimer from '@components/AFrameComponents/SessionTimer.astro';
	import TaskTimer from '@components/AFrameComponents/TaskTimer.astro';

	import ClickTestObject from '@components/AFrameComponents/ClickTestObject.astro';
---

<AFrameLayout 
	title="VR_Test_1"
	heading="Working Source Files"
>

<CameraCorners/>

<a-scene 
	background="color: #333" 
	raycaster="far: 100; "
	ui-controller
	camera-position
	environment
	info-message="htmlSrc: #messageText"
	loading-screen="dotsColor: red; backgroundColor: black"
>
	<a-assets>
		<a-mixin
			id="marker"
			geometry="primitive: plane; width: 0.02; height: 0.02"
			material="color: red"
		></a-mixin>

		<a-mixin
			id="tile" 
			tile="width: 0.400; height: 0.285"
			animation__scale="property: scale; to: 1.02 1.02 1.02; dur: 100; startEvents: mouseenter"
			animation__scale_reverse="property: scale; to: 1 1 1; dur: 100; startEvents: mouseleave"
		></a-mixin>

		<a-mixin
			id="focus-animation"
			animation__scale="property: object3D.position.z; to: -0.05; dur: 100; startEvents: unfocused"
			animation__scale_reverse="property: object3D.position.z; to: 0; dur: 100; startEvents: focused">
		</a-mixin>

		<img id="groundTexture" src="https://cdn.aframe.io/a-painter/images/floor.jpg">
	</a-assets>

	<a-entity position="0 1.75 0">
	  <a-entity
		  position="0 0.25 0.5"
		  geometry="primitive: plane; width:auto; height:auto;"
		  material="color: #00FF00"
		  text="width: 2.5; wrapCount: 50; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; anchor: center; align: center; value: Sense/Net Construct v0.0::initial_tests;"
	  ></a-entity>

	  <a-entity
		  id="center_panel"
		  position="0 0 0"
		  geometry="primitive: plane; width:4; height:2;"
		  material="color: #000000"
		  text="width: 3; wrapCount: 80; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: left; value: Main Panel | size: 4x2 | pos: 0 0 0;"
	  ></a-entity>

		<!-- Side Panels - START -->
		<a-entity
		id="left_side_panel"
		position="-2.6 0 0"
		geometry="primitive: plane; width:1; height:2;"
		material="color: #666"
		text="width: 0.9;  wrapCount: 20; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Left Side Panel"
		>
			<LiveClock/>
			<SessionTimer/>
			<TaskTimer/>
		</a-entity>

		<a-entity
			id="right_side_panel"
			position="2.6 0 0"
			geometry="primitive: plane; width:1; height:2;"
			material="color: #666"
			text="width: 0.9;  wrapCount: 20; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Right Side Panel"
		></a-entity>
		<!-- Side Panels - END -->

	<!-- Top/Bottom Panels - START -->
	  <a-entity
		  id="top_panel"
		  position="0 1.35 0"
		  geometry="primitive: plane; width:4; height:0.5;"
		  material="color: #666"
		  text="width: 1.5;  wrapCount: 30; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Top Tools Panel"
	  ></a-entity>
	  <a-entity
		  id="bottom_panel"
		  position="0 -1.35 0"
		  geometry="primitive: plane; width:4; height:0.5;"
		  material="color: #666"
		  text="width: 1.5;  wrapCount: 30; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; align: center; value: Bottom Tools Panel"
	  ></a-entity>
	</a-entity>

	<ClickTestObject/>

	<CameraCursor/>

	<GroundPlane/>

  </a-scene>

</AFrameLayout>
