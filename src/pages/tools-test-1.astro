	import SplitLayout from '@components/contentLayouts/SplitLayout.astro';
	//import SampleForm from '@components/Forms/SampleForm.astro';
	//import DisplayBits from '@components/DisplayBits.astro';

	import StopwatchTimer from '@components/Timers/StopwatchTimer.astro';
	import PomodoroTimer from '@components/Timers/PomodoroTimer.astro';
---

<Layout 
	title="Tools Test"
	heading="Text-Based Tools Testing"
>
	
	<section>
		<h2 class="text-size-3">Timers</h2>
		<p class="text-size-2">
			Demos for in-VR timer tools using just plain text. 
			<br/><br/>
			To-do: add an additional prop to toggle the functions between using regular text and data-attribute text for VR.
		</p>
		<ul class="text-size-2">
			<li>Session Timer: <span id="sessionTimer">00:00:00</span></li>
			<li>StopWatch Timer: <StopwatchTimer/></li>
			<li>Pomodoro Timer: <PomodoroTimer/></li>
		</ul>
	</section>

	<section class="noPadding">
		<SplitLayout>
			<Fragment slot="left-slot"> 
				<h2>Scan To Open On Mobile</h2>
				<p>This QR code simply links to the page you're looking at right now. WebVR is best experienced on your phone, preferably with a headset. Scan it, and open the VR Construct you'd like to use.</p>
			</Fragment>
			<Fragment slot="right-slot"> 
				<div id="qrcode"></div>
				<script type="text/javascript">
					document.addEventListener("DOMContentLoaded", function(){
						//runs code after DOM load
						new QRCode(document.getElementById("qrcode"), "https://sense-net-vr-construct.netilfy.app");
					});
				</script>
			</Fragment>
		</SplitLayout>
	</section>
	
	

	
</Layout>


