---
//Essential Components
	import ARLayout from '@layouts/AR-Layout.astro';
	
---

<ARLayout 
	title="VR_Test_1"
	heading=""
>

<a-scene 
	mindar-image="imageTargetSrc: https://cdn.jsdelivr.net/gh/hiukim/mind-ar-js@1.2.5/examples/image-tracking/assets/card-example/card.mind; filterMinCF:0.1; filterBeta: 10;"
	color-space="sRGB" 
	renderer="colorManagement: true, physicallyCorrectLights" 
	vr-mode-ui="enabled: false" 
	device-orientation-permission-ui="enabled: false">
	<a-assets>
		<img id="card" src="https://cdn.jsdelivr.net/gh/hiukim/mind-ar-js@1.2.5/examples/image-tracking/assets/card-example/card.png" />
		<a-asset-item id="avatarModel" src="/3d-objects/test-building/scene.gltf"></a-asset-item>
	</a-assets>

	<a-camera position="0 0 0" look-controls="enabled: false"></a-camera>

	<a-entity mindar-image-target="targetIndex: 0">
	  <!-- <a-plane src="#card" position="0 0 0" height="0.552" width="1" rotation="0 0 0"></a-plane> -->
	  <a-gltf-model rotation="90 0 0 " position="0 0 0.1" scale="0.05 0.05 0.05" src="#avatarModel"/>
	</a-entity>
</a-scene>

</ARLayout>
