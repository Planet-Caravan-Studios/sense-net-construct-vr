---
interface Props {
	title: string;
	subtitle: string;
	body: string;
	href: string;
}

const { title, subtitle, body, href } = Astro.props;
---

<a-entity
	
	position="0.65 0.65 0.5"
	geometry="primitive: plane; width:0.65; height:0.075;"
	material="color: #00FF00"
>
	<a-text 
		position="0.2 0.01 0"
		value="Real World Time: "
		width="1" wrapCount="50" lineHeight="50" letterSpacing="5" 
		color="white" font="sourcecodepro" anchor="center" align="left"
	></a-text>
	<a-text 
		position="0.6 0.01 0"
		id="LiveClock" value="$time"
		width="1" wrapCount="50" lineHeight="50" letterSpacing="5" 
		color="white" font="sourcecodepro" anchor="center" align="left"
	></a-text>
</a-entity>


