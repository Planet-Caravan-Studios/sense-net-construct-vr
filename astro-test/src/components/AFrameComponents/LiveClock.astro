	id="LiveClock"
	position="0 0.05 0.5"
	geometry="primitive: plane; width:auto; height:auto;"
	material="color: #00FF00"
	text="width: 2.5; wrapCount: 50; lineHeight: 50; letterSpacing: 5; color: white; font: sourcecodepro; anchor: center; align: center; value: $time"
>
